// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.abdullahu5mani.music-sync-app",
  "asar": true,
  "productName": "Music Sync App",
  "directories": {
    "output": "release/${version}",
    "buildResources": "build"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  // Extra resources are copied outside the ASAR archive for runtime access
  "extraResources": [
    {
      "from": "src/assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  // Icon configuration (used for installer and app icon)
  "icon": "build/icon.ico",
  // GitHub Releases configuration
  "publish": {
    "provider": "github",
    "owner": "Abdullahu5mani",
    "repo": "Music-Electron-App",
    "releaseType": "release"
  },
  "mac": {
    "icon": "build/icon.icns",
    "target": [
      "dmg",
      "zip"
    ],
    "artifactName": "${productName}-Mac-${version}.${ext}"
  },
  "win": {
    "icon": "build/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-${arch}.${ext}"
  },
  "portable": {
    "artifactName": "${productName}-Windows-${version}-Portable.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "linux": {
    "icon": "build/icon.png",
    "target": [
      "AppImage",
      "tar.gz"
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}",
    "category": "Audio"
  }
}
